    <curator.version>4.0.1</curator.version>
    <couchbase.client.version>2.7.2</couchbase.client.version>
    <dukes.version>1.5.1.raptorio</dukes.version>
    <rheos.version>2.0.5-SNAPSHOT</rheos.version>
    <kafka.version>2.0.1</kafka.version>
    <metrics.version>1.2.5-RELEASE</metrics.version>
    <jackson.version>2.9.7</jackson.version>
    <powermock.version>1.6.6</powermock.version>
    <scoverage.plugin.version>1.3.0</scoverage.plugin.version>
    <logback.kafkaAppender.version>0.1.0</logback.kafkaAppender.version>
    <logback.encoder.version>4.11</logback.encoder.version>
    <docker.image.prefix>hub.tess.io/raptorontess</docker.image.prefix>
    <tracking.component.version>0.9.0-RELEASE</tracking.component.version>
    <ddsclient.component.version>0.9.1-RELEASE</ddsclient.component.version>
  </properties>

  <modules>
    <module>common</module>
    <module>spark-common</module>
    <module>kafka-common</module>
    <module>listener</module>
    <module>filter</module>
    <module>spark-nrt</module>
    <module>tools</module>
    <module>ingester</module>
    <module>event-listener</module>
    <module>adservice</module>
